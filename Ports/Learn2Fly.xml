<?xml version="1.0" encoding="UTF-8" ?>
<Module>
<ModulePrefs title="Funny Shooter 2" />
<Content type="html"><![CDATA[
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Learn to Fly 2</title>
  <script src="https://unpkg.com/@ruffle-rs/ruffle"></script>
  <style>
    body {
      background-color: #1e1e1e;
      color: #f0f0f0;
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
      padding: 20px;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      overflow: hidden;
    }

    .fancy-button {
      width: 180px;
      height: 50px;
      border: 2px solid #8a85ff;
      border-radius: 6px;
      background-color: #1e1e1e;
      color: #8a85ff;
      font-size: 14px;
      font-weight: 600;
      letter-spacing: 1px;
      text-transform: uppercase;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .fancy-button:hover {
      background-color: #8a85ff;
      color: #1e1e1e;
      transform: translateY(-2px);
    }

    #flash-container {
      display: none;
      height: 100vh;
      width: 100vh;
      max-width: 100vw;
      max-height: 100vw;
    }

    ruffle-player {
      width: 100%;
      height: 100%;
      display: block;
    }
  </style>
</head>
<body>
  <button class="fancy-button" id="play-button">Learn to Fly 2</button>
  <div id="flash-container"></div>

  <script>
    window.RufflePlayer = window.RufflePlayer || {};
    document.getElementById("play-button").addEventListener("click", () => {
      const ruffle = window.RufflePlayer.newest();
      const container = document.getElementById("flash-container");
      const player = ruffle.createPlayer();
      container.appendChild(player);
      player.load("https://jjjwelch420.github.io/Launcher/Ports/SWF/Learn2Fly.swf");

      document.getElementById("play-button").style.display = "none";
      container.style.display = "block";
    });
  </script>
</body>
</html>

]]></Content>
</Module>
