<Content type="html"><![CDATA[
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Launcher</title> 
  <style>
    body {
      background-color: #1e1e1e;
      color: #f0f0f0;
      font-family: sans-serif;
      margin: 0;
      padding: 20px;
    }
    .button-container {
      display: flex;
      flex-wrap: wrap;
      gap: 16px;
    }
    .fancy-button {
      width: 200px;
      height: 60px;
      border: 2px solid #8a85ff;
      border-radius: 8px;
      background-color: #2b2b2b;
      color: #8a85ff;
      font-size: 15px;
      font-weight: 600;
      letter-spacing: 1px;
      text-transform: uppercase;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 2px 4px 12px rgba(0, 0, 0, 0.4);
      flex-shrink: 0;
    }
    .fancy-button:hover {
      background-color: #8a85ff;
      color: #1e1e1e;
      transform: translateY(-2px);
      box-shadow: 2px 6px 16px rgba(0, 0, 0, 0.5);
    }
  </style>
</head>
<body>
  <div class="button-container">
    <button class="fancy-button" onclick="loadFile('Ports/basket-random.xml')">Basket Random</button>
    <button class="fancy-button" onclick="loadFile('Ports/stick-war.xml')">Stick War</button> 
    <button class="fancy-button" onclick="loadFile('Ports/ARC.xml')">ARC</button>
    <button class="fancy-button" onclick="loadFile('Ports/granny.xml')">Granny</button>
    <button class="fancy-button" onclick="loadFile('Ports/granny-2.xml')">Granny 2</button>
    <button class="fancy-button" onclick="loadFile('Ports/granny-3.xml')">Granny 2</button>
    <button class="fancy-button" onclick="loadFile('Ports/racing.xml')">Racing</button>
    <button class="fancy-button" onclick="loadFile('Ports/runner.xml')">Sprinter Flash</button>
    <button class="fancy-button" onclick="loadFile('Ports/minecraft.xml')">Minecraft</button>
    <button class="fancy-button" onclick="loadFile('Ports/gunspin.xml')">Gun Spin</button>
    <button class="fancy-button" onclick="loadFile('Ports/OvO.xml')">OvO</button>
    <button class="fancy-button" onclick="loadFile('Ports/Cookie.xml')">Cookie Clicker</button>
    <button class="fancy-button" onclick="loadFile('Ports/SM64.xml')">Super Ah 64</button>
    <button class="fancy-button" onclick="loadFile('Ports/Drift-RU.xml')">Drift Hunters</button>
    <button class="fancy-button" onclick="loadFile('Ports/ETD.xml')">Earn To Die (W.I.P)</button>
    <button class="fancy-button" onclick="loadFile('Ports/Riddle-School/Riddle-School.xml')">Riddle School W.I.P</button>
    <button class="fancy-button" onclick="loadFile('Ports/Funny2.xml')">Funny Shooter</button>
  </div>
  <script>
    const ROOT_URL = 'https://jjjwelch420.github.io/Launcher/';

    async function fetchHTMLFromXML(url) {
      try {
        const response = await fetch(url);
        const xmlText = await response.text();
        const parser = new DOMParser();
        const xmlDoc = parser.parseFromString(xmlText, 'application/xml');
        const contentNode = xmlDoc.querySelector('Content');
        return contentNode?.textContent || '<p>Error loading content</p>';
      } catch (error) {
        console.error('Failed to fetch XML:', error);
        return '<p>Failed to load XML content</p>';
      }
    }

    async function loadFile(relativePath) {
      const fullURL = ROOT_URL + relativePath;
      const htmlContent = await fetchHTMLFromXML(fullURL);
      const newTab = window.open('about:blank', '_blank');
      if (newTab) {
        newTab.document.open();
        newTab.document.write(htmlContent);
        newTab.document.close();
      } else {
        alert('Popup blocked. Please allow popups for this site.');
      }
    }

    // Example usage:
    
  </script>
</body>
</html>

