<?xml version="1.0" encoding="UTF-8" ?>
<Module>
<ModulePrefs title="Google.m" />
<Content type="html"><![CDATA[
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Launcher</title> 
  <style>
    body {
      background-color: #1e1e1e;
      color: #f0f0f0;
      font-family: sans-serif;
      margin: 0;
      padding: 20px;
    }
    .button-container {
      display: flex;
      flex-wrap: wrap;
      gap: 16px;
    }
    .fancy-button {
      width: 200px;
      height: 60px;
      border: 2px solid #8a85ff;
      border-radius: 8px;
      background-color: #2b2b2b;
      color: #8a85ff;
      font-size: 15px;
      font-weight: 600;
      letter-spacing: 1px;
      text-transform: uppercase;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 2px 4px 12px rgba(0, 0, 0, 0.4);
      flex-shrink: 0;
    }
    .fancy-button:hover {
      background-color: #8a85ff;
      color: #1e1e1e;
      transform: translateY(-2px);
      box-shadow: 2px 6px 16px rgba(0, 0, 0, 0.5);
    }
  </style>
</head>
<body>
  <div class="button-container">
    <button class="fancy-button" onclick="fullscreenIframe('basket-random')">Basket Random</button>
    <button class="fancy-button" onclick="fullscreenIframe('stick-war')">Stick War</button>
    <button class="fancy-button" onclick="fullscreenIframe('ARC')">ARC</button>
    <button class="fancy-button" onclick="fullscreenIframe('granny')">Granny</button>
    <button class="fancy-button" onclick="fullscreenIframe('granny-2')">Granny 2</button>
    <button class="fancy-button" onclick="fullscreenIframe('granny-3')">Granny 3</button>
    <button class="fancy-button" onclick="fullscreenIframe('racing')">Racing</button>
    <button class="fancy-button" onclick="fullscreenIframe('runner')">Sprinter Flash</button>
    <button class="fancy-button" onclick="fullscreenIframe('minecraft')">Minecraft</button>
    <button class="fancy-button" onclick="fullscreenIframe('gunspin')">Gun Spin</button>
    <button class="fancy-button" onclick="fullscreenIframe('OvO')">OvO</button>
    <button class="fancy-button" onclick="fullscreenIframe('Cookie')">Cookie Clicker</button>
    <button class="fancy-button" onclick="fullscreenIframe('SM64')">Super Ah 64</button>
    <button class="fancy-button" onclick="fullscreenIframe('Drift-RU')">Drift Hunters</button>
    <button class="fancy-button" onclick="fullscreenIframe('ETD')">Earn To Die (W.I.P)</button>
    <button class="fancy-button" onclick="fullscreenIframe('Riddle-School')">Riddle School W.I.P</button>
    <button class="fancy-button" onclick="fullscreenIframe('Funny2')">Funny Shooter</button>
  </div>

  <div id="iframe-container" style="display:none;"></div>

  <script>
    const ROOT_URL = 'https://jjjwelch420.github.io/Launcher/';
    const games = [
      'basket-random', 'stick-war', 'ARC', 'granny', 'granny-2', 'granny-3',
      'racing', 'runner', 'minecraft', 'gunspin', 'OvO', 'Cookie',
      'SM64', 'Drift-RU', 'ETD', 'Riddle-School/Riddle-School', 'Funny2'
    ];

    async function fetchHTMLFromXML(url) {
      try {
        const response = await fetch(url);
        const xmlText = await response.text();
        const parser = new DOMParser();
        const xmlDoc = parser.parseFromString(xmlText, 'application/xml');
        const contentNode = xmlDoc.querySelector('Content');
        return contentNode?.textContent || '<p>Error loading content</p>';
      } catch (error) {
        console.error('Failed to fetch XML:', error);
        return '<p>Failed to load XML content</p>';
      }
    }

    async function preloadIframes() {
      const container = document.getElementById('iframe-container');
      for (const game of games) {
        const iframe = document.createElement('iframe');
        iframe.id = game;
        iframe.style.position = 'fixed';
        iframe.style.top = '0';
        iframe.style.left = '0';
        iframe.style.width = '100vw';
        iframe.style.height = '100vh';
        iframe.style.border = 'none';
        iframe.style.zIndex = '9999';
        iframe.style.display = 'none';
        container.appendChild(iframe);

        const fullURL = ROOT_URL + 'Ports/' + game + '.xml';
        const htmlContent = await fetchHTMLFromXML(fullURL);
        const iframeDoc = iframe.contentWindow.document;
        iframeDoc.open();
        iframeDoc.write(htmlContent);
        iframeDoc.close();
      }
    }

    function fullscreenIframe(id) {
      const iframe = document.getElementById(id);
      if (!iframe) return;
      iframe.style.display = 'block';
      if (iframe.requestFullscreen) {
        iframe.requestFullscreen();
      } else if (iframe.webkitRequestFullscreen) {
        iframe.webkitRequestFullscreen();
      } else if (iframe.mozRequestFullScreen) {
        iframe.mozRequestFullScreen();
      } else if (iframe.msRequestFullscreen) {
        iframe.msRequestFullscreen();
      }

      document.addEventListener('fullscreenchange', () => {
        if (!document.fullscreenElement) {
          iframe.style.display = 'none';
        }
      });
    }

    preloadIframes();
  </script>
</body>

</html>

]]></Content>
</Module>
